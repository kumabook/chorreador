doctype html
html
  head
    title esprofiler result page
    meta(charset="utf-8")

    link(href="/bower_components/SyntaxHighlighter/styles/shCore.css",
          rel="stylesheet")
    link(href="/bower_components/SyntaxHighlighter/styles/shThemeDefault.css",
          rel="stylesheet")
    link(href="/bower_components/w2ui/w2ui-1.3.min.css",
          rel="stylesheet")
    script(src="/bower_components/SyntaxHighlighter/scripts/XRegExp.js",
          type="text/javascript")
    script(src="/bower_components/SyntaxHighlighter/scripts/shCore.js",
          type="text/javascript")
    script(src="/bower_components/SyntaxHighlighter/scripts/shBrushJScript.js",
          type="text/javascript")
    script(src="/bower_components/jquery/dist/jquery.js",
          type="text/javascript")
    script(src="/bower_components/w2ui/w2ui-1.3.js",
          type="text/javascript")
    != css('built-editor')
    != js('built-editor')
    != js('application')
    script(type="text/javascript").
      var html = !{JSON.stringify(html)}
      var profile = !{JSON.stringify(profile)}
      window.addEventListener('load', function(e) {
        var pstyle = 'border: 1px solid #dfdfdf; padding: 5px;';
        $('#reporter').w2layout({
          name: 'reporter1',
          padding: 4,
          panels: [
            {
               type: 'top',
               size: 25,
               resizable: false,
               style: pstyle,
               content: 'esprofiler'
            },
            {
               type: 'left',
               size: 200,
               resizable: true,
               style: pstyle,
               content: $('#sidebar')
            },
            {
               type: 'main',
               style: pstyle,
               content: $('#editor')
            }
          ]
        });
        reporter.showSourceList(html.sources, profile)
        reporter.showSource(html.sources[0], profile)
      });
  body
    div#reporter(style="height: 750px; width: 100%; ")
    div#sidebar( style="height: 100%;  width: 100%;")
    div#editor(  style="height: 100%;  width: 100%;")
